<form class="form-inline control-margin">
  <div class="form-group">
    <%= label_tag 'questions_number', t('helpers.label.test.questions_number'), class: 'control-label' %>
    <%= text_field_tag 'questions_number', nil, {class: 'form-control', type: 'number', min: '1', max: @questions_number} %>
  </div>
  <div class="form-group">
    <%= label_tag 'discipline_id', t('helpers.label.test.discipline'), class: 'control-label' %>
    <%= select_tag 'discipline_id', nil, class: 'form-control' %>
  </div>
  <%= button_tag t('tests.generate'), {class: 'btn btn-primary', type: 'button', id: 'generate'} %>
</form>

<div id="questions_container">
</div>

<template id="question_template">
  <div class="panel panel-default">
    <div class="panel-heading">
      <p></p>
    </div>
    <ul class="list-group"></ul>
  </div>
</template>

<template id="answer_template">
  <li class="list-group-item">
  </li>
</template>

<%= javascript_include_tag 'tests/tests.service' %>
<%= javascript_include_tag 'tests/new' %>
