<div class="nested-fields input-group answer-form">
  <span class="input-group-addon">
    <%= f.check_box :correct, title: t('actions.check_as_right_answer') %>
  </span>

  <%= f.text_field :text, {class: 'form-control', placeholder: 'text'} %>

  <span class="input-group-btn">
    <%= link_to_remove_association f, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
    <% end %>
  </span>
</div>
