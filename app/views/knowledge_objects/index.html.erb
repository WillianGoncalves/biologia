<div class="row" id="knowledge_objects_index">
  <div class="col-md-12">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to t('knowledge_objects.new'), new_knowledge_object_path, class: "btn btn-default navbar-btn" %>
        </div>
      </div>
    </nav>

    <div id="search_form">
      <%= form_tag knowledge_objects_path, :method => 'get' do %>
        <div class="row">
          <div class="col-lg-6">
            <%= select_tag :discipline_id, nil, {class: 'form-control control-margin'} %>
            <div class="input-group control-margin">
              <%= select_tag :great_theme_id, nil, {class: 'form-control'} %>
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                  <span class="glyphicon glyphicon-search"></span>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="list-group">
      <label class="list-group-item">
        <%= t('knowledge_objects.index') %>
      </label>
      <% @knowledge_objects.each do |k| %>
        <p class="list-group-item">
          <%= k.description %>
        </p>
        <% end %>
    </div>

  </div>
</div>

<%= javascript_include_tag 'knowledge_objects/index' %>
