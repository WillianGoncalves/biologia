<div class="row" id="knowledge_objects_index">
  <div class="col-md-12">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to t('knowledge_objects.new'), new_knowledge_object_path, class: "btn btn-default navbar-btn" %>
        </div>
      </div>
    </nav>

    <div id="search_form">
      <%= form_tag knowledge_objects_path, :method => 'get' do %>
        <div class="row">
          <div class="col-lg-6">
            <%= render 'shared/select_great_theme' %>
            <%= submit_tag t('actions.index'), class: 'btn btn-primary control-margin' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="list-group">
      <label class="list-group-item">
        <%= t('knowledge_objects.index') %>
      </label>
      <% @knowledge_objects.each do |k| %>
        <%= link_to edit_knowledge_object_path(k), class: 'list-group-item' do %>
          <%= k.description %><br />
          <em class="text-muted">
            <%= k.great_theme.discipline.description %> >
            <%= k.great_theme.description %>
          </em>
        <% end %>
      <% end %>
    </div>

  </div>
</div>

<%= javascript_include_tag 'knowledge_objects/index' %>
