<div class="row">
  <div class="col-md-12">
    <%= form_for @great_theme, url: {action: "create"} do |f| %>

      <div class="form-group">
        <%= label_tag 'discipline_id', t('helpers.label.question.discipline'), class: 'control-label' %>
        <%= select_tag :discipline_id, nil, {class: 'form-control control-margin'} %>
      </div>

      <div class="form-group">
        <%= f.label :description, class: 'control-label' %>
        <%= f.text_field :description, class: 'form-control' %>
      </div>

      <button type="button" id="salvar" class="btn btn-primary">
        <%= t('great_themes.create') %>
      </button>

    <% end %>
  </div>
</div>

<%= javascript_include_tag 'great_themes/great_themes.service' %>
<%= javascript_include_tag 'great_themes/new' %>
