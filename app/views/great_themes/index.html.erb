<div class="row" id="great_themes_index">
  <div class="col-md-12">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to t('great_themes.new'), new_great_theme_path, class: "btn btn-default navbar-btn" %>
        </div>
      </div>
    </nav>

    <div id="search_form">
      <%= form_tag great_themes_path, :method => 'get' do %>
        <div class="row">
          <div class="col-lg-6">
            <div class="input-group">
              <%= select_tag :discipline_id, nil, {class: 'form-control'} %>
              <span class="input-group-btn">
                <%= button_tag(type: 'submit', class: 'btn btn-default') do %>
                  <span class="glyphicon glyphicon-search"></span>
                <% end %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="list-group">
      <label class="list-group-item">
        <%= t('great_themes.index') %>
      </label>
      <% @great_themes.each do |g| %>
        <p class="list-group-item">
          <%= g.description %>
        </p>
        <% end %>
    </div>

  </div>
</div>

<%= javascript_include_tag 'greatThemes/index' %>
