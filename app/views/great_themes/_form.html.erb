<%= form_for @great_theme do |f| %>

  <%= render 'shared/errors', model: @great_theme %>

  <div class="form-group">
    <%= f.label :discipline_id, t('helpers.label.question.discipline') %>
    <%= f.select :discipline_id, disciplines_for_select, {}, {class: 'form-control control-margin'} %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= link_to 'Voltar', :back, class: 'btn btn-default' %>
  <% if @great_theme.persisted? %>
    <%= link_to 'Excluir', great_theme_path(@great_theme), method: :delete, data: { confirm: 'Confirme' }, class: 'btn btn-danger' %>
  <% end %>
  <%= f.submit t('great_themes.create'), class: 'btn btn-primary' %>

<% end %>
