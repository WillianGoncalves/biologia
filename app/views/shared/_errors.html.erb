<% if model.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading"><%= pluralize(model.errors.count, 'erro') %></div>
    <div class="panel-body">
      <% model.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
      <% end %>
    </div>
  </div>
<% end %>
